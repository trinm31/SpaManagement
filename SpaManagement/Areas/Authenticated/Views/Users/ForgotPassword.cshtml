@model SpaManagement.ViewModels.ForgotPasswordViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<form method="post">
    <div class="row p-3 border bg-white">
        <div class="col-12 border-bottom">
            <h2 class="text-primary">Check Email</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Email" class="form-control" readonly="true">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Check</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}