@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<br>
<div class="p-4 border rounded bg-white">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Account List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Account</a>
        </div>
    </div>
    <br>
    <br>
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
        <tr class="table-info">
            <th>Customer Name</th>
            <th>Phone</th>
            <th>Identity Card</th>
            <th>Debt</th>
            <th>Creadit</th>
            <th>Balance</th>
            <th></th>
        </tr>
        </thead>
    </table>
</div>  
@section Scripts{
    <script src="~/js/Account.js"></script>
}