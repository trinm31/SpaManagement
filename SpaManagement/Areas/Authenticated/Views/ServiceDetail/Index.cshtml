@model SpaManagement.ViewModels.ServiceDetailViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<br>
<div class="row">
    <div class="col-6">
        <div class="p-4 border rounded bg-white">
            <div class="row">
                <div class="col-6">
                    <h2 class="text-primary">Customer List</h2>
                </div>
            </div>
            <br>
            <br>
            <partial name="_StatusMessage" model="@ViewData["Customer"]" />
            <table id="tblData" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark">
                <tr class="table-info">
                    <th>Customer Name</th>
                    <th>Phone</th>
                    <th>Identity Card</th>
                    <th></th>
                </tr>
                </thead>
            </table>
        </div>
        <br>
        <div class="p-4 border rounded bg-white">
            <div class="row">
                <div class="col-6">
                    <h2 class="text-primary">Service List</h2>
                </div>
            </div>
            <br>
            <br>
            <partial name="_StatusMessage" model="@ViewData["Service"]" />
            <table id="tblData1" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark">
                <tr class="table-info">
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th></th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
    <div class="col-6">
        @if (Model.ServiceDetail.Id != 0)
        {
            <form method="post" asp-action="EditServiceDetail">
            <div class="row p-3 border bg-white">
                <div class="col-12 border-bottom">
                    <h2 class="text-primary">Edit Service Detail</h2>
                </div>
                <input asp-for="ServiceDetail.CustomerId" hidden>
                <div class="col-8 pt-4">
                    <partial name="_StatusMessage" model="@ViewData["Form"]"/>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ServiceDetail.OrderDate"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ServiceDetail.OrderDate" class="form-control">
                            <span asp-validation-for="ServiceDetail.OrderDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ServiceDetail.Price"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ServiceDetail.Price" class="form-control">
                            <span asp-validation-for="ServiceDetail.Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ServiceDetail.Paid"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ServiceDetail.Paid" class="form-control">
                            <span asp-validation-for="ServiceDetail.Paid" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ServiceDetail.Slot"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ServiceDetail.Slot" class="form-control">
                            <span asp-validation-for="ServiceDetail.Slot" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4">
                            <div class="row">
                                <div class="col">
                                    <button type="submit" class="btn btn-primary form-control">Edit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        }
        @if (Model.ServiceUsers.Id != 0)
        {
            <form method="post" asp-action="EditSlot">
            <div class="row p-3 border bg-white">
                <div class="col-12 border-bottom">
                    <h2 class="text-primary">Edit Slot</h2>
                </div>
                <input asp-for="ServiceDetail.CustomerId" hidden>
                <div class="col-8 pt-4">
                    <partial name="_StatusMessage" model="@ViewData["Form"]"/>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Slot.Paid"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Slot.Paid" class="form-control">
                            <span asp-validation-for="Slot.Paid" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ServiceUsers.StartTime"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ServiceUsers.StartTime" class="form-control">
                            <span asp-validation-for="ServiceUsers.StartTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ServiceUsers.EndTime"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ServiceUsers.EndTime" class="form-control">
                            <span asp-validation-for="ServiceUsers.EndTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="StaffId"></label>
                        </div>
                        <div class="col-8">
                            @Html.DropDownListFor(m => m.StaffId, Model.StaffList, "-Select a Category", new {@class = "form-control"})
                            <span asp-validation-for="StaffId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ServiceUsers.Note"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ServiceUsers.Note" class="form-control">
                            <span asp-validation-for="ServiceDetail.Slot" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4">
                            <div class="row">
                                <div class="col">
                                    <button type="submit" class="btn btn-primary form-control">Edit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        }
        <br>
        <div class="p-4 border rounded bg-white">
            <div class="row">
                <div class="col-6">
                    <h2 class="text-primary">Slot List</h2>
                </div>
            </div>
            <br>
            <br>
            <partial name="_StatusMessage" model="@ViewData["Slot"]" />
            <table id="tblData2" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark">
                <tr class="table-info">
                    <th>Service Date</th>
                    <th>Slot</th>
                    <th>Price</th>
                    <th></th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/ServiceDetail.js"></script>
}
