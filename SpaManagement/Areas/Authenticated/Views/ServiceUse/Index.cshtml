@model SpaManagement.ViewModels.ServiceUseViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-6">
        <div class="p-4 border rounded bg-white">
            <div class="row">
                <div class="col-6">
                    <h2 class="text-primary">Customer List</h2>
                </div>
            </div>
            <br>
            <br>
            <partial name="_StatusMessage" model="@ViewData["Customer"]" />
            <table id="tblData" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark">
                <tr class="table-info">
                    <th>Customer Name</th>
                    <th>Phone</th>
                    <th>Identity Card</th>
                    <th></th>
                </tr>
                </thead>
            </table>
        </div>
        <br>
        <div class="p-4 border rounded bg-white">
            <div class="row">
                <div class="col-6">
                    <h2 class="text-primary">Service List</h2>
                </div>
            </div>
            <br>
            <br>
            <partial name="_StatusMessage" model="@ViewData["Service"]" />
            <table id="tblData1" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark">
                <tr class="table-info">
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th></th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
    <div class="col-6">
        @if (Model != null)
        {
            <form method="post" asp-action="ServiceUse">
            <div class="row p-3 border bg-white h-100">
                <div class="col-12 border-bottom">
                    <h2 class="text-primary">Service Use</h2>
                </div>
                <div class="col-8 pt-4">
                    <partial name="_StatusMessage" model="@ViewData["Form"]"/>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="StartTime"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="StartTime" class="form-control">
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="EndTime"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="EndTime" class="form-control">
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Paid"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Paid" class="form-control">
                            <span asp-validation-for="Paid" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="StaffId"></label>
                        </div>
                        <div class="col-8">
                            @Html.DropDownListFor(m => m.StaffId, Model.StaffList, "-Select a Category", new {@class = "form-control"})
                            <span asp-validation-for="StaffId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Note"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Note" class="form-control">
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4">
                            <div class="row">
                                <div class="col">
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        }
    </div>
</div>
@section Scripts{
    <script src="~/js/ServiceUse.js"></script>
}
